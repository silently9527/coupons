<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.silently9527.coupons.repository.databases.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.silently9527.coupons.repository.databases.entity.Role">
        <id column="role_id" property="roleId" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="status" property="status" />
        <result column="deleted" property="deleted" />
        <result column="create_user" property="createUser" />
        <result column="gmt_created" property="gmtCreated" />
        <result column="modified_user" property="modifiedUser" />
        <result column="gmt_modified" property="gmtModified" />
        <result column="description" property="description" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        role_id, name, code, status, deleted, create_user, gmt_created, modified_user, gmt_modified, description
    </sql>

    <select id="getRoleByUserId" resultMap="BaseResultMap">
        SELECT
            r.*
        FROM
            role r
            JOIN user_role ur ON r.role_id = ur.role_id
            AND ur.user_id = #{userId}
            AND r.deleted = 0
    </select>

</mapper>
